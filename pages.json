			}
		},
		// 我的
		{
			"path": "pages/mine/index",
			"style": {
				"navigationBarTitleText": "我的",
				"app-plus": {
					"titleNView": false
				}
			}
		}

		, {
			"path": "pages/mine/InviteFriends/InviteFriends",
